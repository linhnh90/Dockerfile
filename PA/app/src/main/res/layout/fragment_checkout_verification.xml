                    android:text="@string/scan_or_key_in"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/dp_80"
                    android:paddingEnd="@dimen/dp_80">

                    <EditText
                        android:id="@+id/edt_nric"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:layout_weight="3"
                        android:autofillHints="@string/nric"
                        android:backgroundTint="@color/light_grey_color"
                        android:drawableEnd="@drawable/ic_pen"
                        android:focusable="false"
                        android:hint="@string/nric"
                        android:imeOptions="actionDone"
                        android:inputType="textNoSuggestions"
                        android:paddingBottom="@dimen/dp_20"
                        android:text=""
                        android:textColor="@color/black_color"
                        android:textSize="@dimen/text_size_normal" />

                    <Button
                        android:id="@+id/btn_verify"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        style="@style/ButtonRedSmall"
                        android:text="@string/verify"
                        android:textAllCaps="false" />

                    <ImageView
                        android:id="@+id/img_verify_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginEnd="@dimen/dp_15"
                        android:contentDescription="@null"
                        android:src="@drawable/ic_verify_success"
                        android:visibility="gone" />

                    <TextView
                        android:id="@+id/txt_verify_success"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/opensans_bold"
                        android:text="@string/verify_success"
                        android:textColor="@color/green_color"
                        android:textSize="@dimen/text_size_normal"
                        android:visibility="gone" />
                </LinearLayout>
