        <LinearLayout
            android:id="@+id/ll_container_register"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_180"
            android:orientation="vertical"
            android:visibility="gone">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:paddingStart="@dimen/dp_80"
                android:paddingEnd="@dimen/dp_80"
                android:text="@string/registering_the_course"
                android:textColor="@color/black_color"
                android:textSize="@dimen/text_size_normal" />

            <RadioGroup
                android:id="@+id/rg_option"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_20"
                android:orientation="horizontal"
                android:paddingStart="@dimen/dp_80"
                android:paddingEnd="@dimen/dp_80">

                <RadioButton
                    android:id="@+id/rb_yes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/dp_65"
                    android:button="@drawable/bg_option_radio"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/yes"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal" />

                <RadioButton
                    android:id="@+id/rb_no"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:button="@drawable/bg_option_radio"
                    android:fontFamily="@font/opensans_bold"
                    android:text="@string/no"
                    android:textColor="@color/black_color"
                    android:textSize="@dimen/text_size_normal" />
            </RadioGroup>

            <LinearLayout
                android:id="@+id/ll_not_register_yourself"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

