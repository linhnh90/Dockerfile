<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/opacity_black_color"
    android:paddingHorizontal="@dimen/dp_100"
    android:paddingTop="@dimen/dp_50"
    android:paddingBottom="@dimen/dp_90"
    tools:context=".modules.ruleAndRegulations.view.RuleAndRegulationsFragment">

    <TextView
        android:id="@+id/txt_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center"
        android:text="@string/rules_and_regulations"
        android:textColor="@color/white_color"
        android:textSize="@dimen/text_size_hlarge" />

    <Button
        android:id="@+id/btn_close"
        style="@style/ButtonWhiteSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:contentDescription="@null"
        android:text="@string/close"
        android:textAllCaps="false" />

    <WebView
        android:id="@+id/web_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/btn_close"
        android:layout_below="@id/txt_title"
        android:layout_marginTop="@dimen/dp_40"
        android:layout_marginBottom="@dimen/dp_40" />
</RelativeLayout>