<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:gravity="center"
    android:orientation="vertical"
    tools:context=".modules.thankfulness.view.ThankfulnessFragment">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/bg_search" />

    <TextView
        android:id="@+id/txt_thankfulness"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_230"
        android:fontFamily="@font/opensans_bold"
        android:gravity="center_horizontal"
        android:text="@string/thanks"
        android:textColor="@color/black_color"
        android:textSize="@dimen/text_size_xxhlarge" />

    <ImageView
        android:id="@+id/img_thanks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/txt_thankfulness"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/thankfulness_margin_top"
        android:background="@android:color/transparent"
        android:contentDescription="@null"
        android:paddingBottom="@dimen/dp_60"
        android:visibility="visible" />
</RelativeLayout>