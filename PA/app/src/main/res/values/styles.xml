<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MySpinnerStyle">
        <item name="android:textColor">@color/light_blue_color</item>
        <item name="android:fontFamily">@font/opensans_italic</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:background">@color/black_color</item>
    </style>

    <style name="DialogUpDown">
        <item name="android:windowEnterAnimation">@anim/slide_up_anim</item>
        <item name="android:windowExitAnimation">@anim/slide_down_anim</item>
    </style>

    <style name="MyDatePickerDialogTheme" parent="Theme.AppCompat.Light">
        <item name="android:width">800dp</item>
        <item name="android:height">800dp</item>
    </style>

    <style name="AppTheme.NoActionBar.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.NoActionBar.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="MyDatePickerStyle" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
        <item name="android:selectedWeekBackgroundColor">@color/colorPrimary</item>
    </style>

    <style name="MyDatePicker" parent="@android:style/Widget.Material.Light.DatePicker">
        <item name="android:calendarViewShown">false</item>
        <item name="android:spinnersShown">true</item>
        <item name="android:datePickerMode">spinner</item>
        <item name="android:rowHeight">@dimen/dp_150</item>
        <item name="android:columnWidth">@dimen/dp_500</item>
    </style>

    <style name="CustomDatePickerStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:datePickerStyle">@style/MyDatePicker</item>
        <item name="android:editTextStyle">@style/PickerEditText</item>
        <item name="android:buttonStyle">@style/PickerButton</item>
        <item name="android:width">@dimen/dp_230</item>
    </style>

    <style name="PickerEditText" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="PickerButton" parent="ThemeOverlay.AppCompat.Dark">
        <item name="android:textSize">@dimen/text_size_medium</item>
    </style>

    <style name="CustomTimePickerStyle" parent="android:Theme.Holo.Light.Dialog">
        <item name="android:editTextStyle">@style/PickerEditText</item>
        <item name="android:width">@dimen/dp_230</item>
    </style>

    <style name="CustomStyledCheckedTextView" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">@color/white_color</item>
        <item name="colorControlActivated">@color/white_color</item>
    </style>

    <style name="Internal.Theme.Transparent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:backgroundDimEnabled">false</item>
    </style>
    
    <style name="TextBottomBar" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/montserrat_bold</item>
        <item name="android:textColor">@color/white_color</item>
    </style>
    
    <style name="ButtonTrans" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/border_corner_red_trans</item>
        <item name="android:textSize">@dimen/text_size_medium</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/red_color_3</item>
        <item name="android:paddingStart">@dimen/dp_30</item>
        <item name="android:paddingEnd">@dimen/dp_30</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>
    
    <style name="ButtonRedMedium" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">187dp</item>
        <item name="android:background">@drawable/border_corner_red</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:paddingStart">@dimen/dp_40</item>
        <item name="android:paddingEnd">@dimen/dp_40</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>
    
    <style name="ButtonRedSmall" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">153dp</item>
        <item name="android:background">@drawable/border_corner_red</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:paddingStart">@dimen/dp_30</item>
        <item name="android:paddingEnd">@dimen/dp_30</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>

    <style name="ButtonRedSmall2" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">153dp</item>
        <item name="android:background">@drawable/border_corner_red</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/white_color</item>
        <item name="android:paddingStart">@dimen/dp_30</item>
        <item name="android:paddingEnd">@dimen/dp_30</item>
        <item name="android:paddingTop">@dimen/dp_10</item>
        <item name="android:paddingBottom">@dimen/dp_10</item>
    </style>
    
    <style name="ButtonWhiteMedium" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">190dp</item>
        <item name="android:background">@drawable/border_red_bg_white</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/red_color_3</item>
        <item name="android:paddingStart">@dimen/dp_40</item>
        <item name="android:paddingEnd">@dimen/dp_40</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>
    
    <style name="ButtonWhiteSmall" parent="Widget.AppCompat.Button">
        <item name="android:minWidth">153dp</item>
        <item name="android:background">@drawable/border_red_bg_white</item>
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="android:fontFamily">@font/opensans_bold</item>
        <item name="android:textColor">@color/red_color_3</item>
        <item name="android:paddingStart">@dimen/dp_30</item>
        <item name="android:paddingEnd">@dimen/dp_30</item>
        <item name="android:paddingTop">@dimen/dp_15</item>
        <item name="android:paddingBottom">@dimen/dp_15</item>
    </style>
</resources>
